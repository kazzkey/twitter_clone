<%= form_with(model: @voice, local: true, url: choose_new_or_edit) do |form| %>
  <% if @voice.errors.any? %>
    <div id="error_explanation">
      <h2><%= @voice.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @voice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="voice_content">
    <%= form.label :"つぶやき(140字以内)" %><br>
    <%= form.text_field :content %>
  </div>
  <br>
  <div class="voice_submit">
    <%= form.submit "送信"%>
  </div>
  <br><br><br>
  <%= link_to '一覧に戻る', voices_path %>
<% end %>
